<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.LoginUsuario"
    android:background="@color/blanco">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:background="@color/blanco"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@drawable/logofondochido" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/logo" />

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="E-mail"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/azul" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Contraseña"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:textColorHint="@color/azul" />

            <Button
                android:id="@+id/btnIngresar"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:background="@color/dorado"
                android:clickable="true"
                android:text="Ingresar"
                android:textColor="@color/blanco" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Recuerdame"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtRegistrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Registrar"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="@color/dorado"
                app:layout_constraintBottom_toTopOf="@+id/scrollView3"
                tools:ignore="MissingConstraints" />


        </LinearLayout>


    </ScrollView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@+id/scrollView3">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Contraseña Olvidada?"
        android:textAlignment="center"
        android:textColor="#2991FF"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"/>

</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>